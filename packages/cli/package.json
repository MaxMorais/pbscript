{
  "name": "@pbscript/cli",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "bin": {
    "pbscript": "./dist/pbscript"
  },
  "scripts": {
    "dev": "chokidar package.json 'src/**' './node_modules/**' -c 'yarn build' --initial",
    "build": "parcel build --no-cache && yarn build:shebang && npm i -g .",
    "build:shebang": "echo \"#!/usr/bin/env node\"|cat - ./dist/index.js > ./dist/pbscript"
  },
  "license": "MIT",
  "devDependencies": {
    "parcel": "^2.7.0"
  },
  "dependencies": {
    "@types/eventsource": "^1.1.9",
    "@types/node": "^18.7.21",
    "commander": "^9.4.0",
    "cross-fetch": "^3.1.5",
    "eventsource": "^2.0.2",
    "find-up": "^6.3.0",
    "pocketbase": "^0.7.1"
  },
  "targets": {
    "node": {
      "engines": {
        "node": ">= 12"
      },
      "source": "./src/index.ts",
      "context": "node",
      "outputFormat": "commonjs",
      "includeNodeModules": [
        "@s-libs/micro-dash",
        "find-up",
        "locate-path",
        "path-exists",
        "p-locate",
        "p-limit",
        "yocto-queue",
        "pocketbase"
      ]
    }
  }
}